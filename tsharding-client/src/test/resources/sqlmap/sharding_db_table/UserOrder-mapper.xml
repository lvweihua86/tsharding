<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mogujie.service.tsharding.mapper.UserOrderMapper">

	<select id="join_test" resultType="java.util.Map" parameterType="long">
		SELECT * FROM user_info u , user_order o
		<include refid="QueryBean_Where" />
		limit 10
	</select>
	<sql id="QueryBean_Where">
		where 0=0 
			<if test="id !=null and id != ''">
				and u.id = #{id} 
			</if>
	</sql>
</mapper>